<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#202124"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/scientific_btn_c"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:background="#202124"
        android:fontFamily="@font/rubik_light"
        android:text="C"
        android:textColor="#F8FAFD"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/scientific_btn_parent_close"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/scientific_btn_ce"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="#202124"
        android:fontFamily="@font/rubik_light"
        android:text="CE"
        android:textColor="#F8FAFD"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/scientific_btn_parent_close"
        app:layout_constraintEnd_toStartOf="@+id/scientific_btn_log" />

    <Button
        android:id="@+id/scientific_btn_sin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/holo_blue_dark"
        android:text="sin"
        android:textAllCaps="false"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/scientific_btn_fact"
        app:layout_constraintEnd_toStartOf="@+id/scientific_btn_cos" />

    <Button
        android:id="@+id/scientific_btn_cos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:background="@android:color/holo_blue_dark"
        android:text="cos"
        android:textAllCaps="false"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/scientific_btn_pi"
        app:layout_constraintEnd_toStartOf="@+id/scientific_btn_tan" />

    <Button
        android:id="@+id/scientific_btn_tan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/holo_blue_dark"
        android:text="tan"
        android:textAllCaps="false"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/scientific_btn_ln"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/scientific_btn_pi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:background="@android:color/holo_blue_dark"
        android:text="π"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/scientific_tv_main"
        app:layout_constraintEnd_toStartOf="@+id/scientific_btn_ln"
        app:layout_constraintStart_toEndOf="@+id/scientific_btn_fact" />

    <Button
        android:id="@+id/scientific_btn_fact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/holo_blue_dark"
        android:text="!"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/scientific_tv_main"
        app:layout_constraintStart_toEndOf="@+id/scientific_btn_parent_open" />

    <Button
        android:id="@+id/scientific_btn_ln"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/holo_blue_dark"
        android:text="ln"
        android:textAllCaps="false"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/scientific_tv_main"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/scientific_btn_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/holo_blue_dark"
        android:text="log"
        android:textAllCaps="false"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/scientific_btn_sqrt"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/scientific_btn_sqrt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/holo_blue_dark"
        android:text="√"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/scientific_btn_indice"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/scientific_btn_indice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/holo_blue_dark"
        android:text="^"
        android:textAllCaps="false"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/scientific_btn_parent_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/holo_blue_light"
        android:text=")"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/scientific_btn_parent_open"
        app:layout_constraintEnd_toStartOf="@+id/scientific_btn_sin"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/scientific_btn_parent_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/holo_blue_light"
        android:text="("
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/scientific_tv_main"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/scientific_tv_sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoSizeMaxTextSize="30dp"
        android:autoSizeMinTextSize="20dp"
        android:background="#202124"
        android:gravity="right"
        android:textColor="#174EA6"
        android:textSize="30sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/scientific_btn_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/scientific_btn_bs"
        android:layout_width="90dp"
        android:layout_height="72dp"
        android:layout_weight="1"
        android:background="#202124"
        android:fontFamily="@font/rubik_light"
        android:text="DEL"
        android:textColor="#F8FAFD"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/scientific_btn_div"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/scientific_btn_9" />

    <TextView
        android:id="@+id/scientific_tv_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoSizeMaxTextSize="50dp"
        android:autoSizeMinTextSize="30dp"
        android:background="#202124"
        android:fontFamily="@font/rubik_light"
        android:gravity="right"
        android:text="0"
        android:textColor="#174EA6"
        android:textSize="50sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/scientific_tv_sub"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/scientific_btn_9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:background="#202124"
        android:fontFamily="@font/rubik_light"
        android:text="9"
        android:textAllCaps="false"
        android:textColor="#F8FAFD"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/scientific_btn_6"
        app:layout_constraintStart_toEndOf="@+id/scientific_btn_8" />

    <Button
        android:id="@+id/scientific_btn_8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:background="#202124"
        android:fontFamily="@font/rubik_light"
        android:text="8"
        android:textAllCaps="false"
        android:textColor="#F8FAFD"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/scientific_btn_5"
        app:layout_constraintStart_toEndOf="@+id/scientific_btn_7" />

    <Button
        android:id="@+id/scientific_btn_7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:background="#202124"
        android:fontFamily="@font/rubik_light"
        android:text="7"
        android:textAllCaps="false"
        android:textColor="#F8FAFD"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/scientific_btn_4"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/scientific_btn_6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:background="#202124"
        android:fontFamily="@font/rubik_light"
        android:text="6"
        android:textColor="#F8FAFD"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/scientific_btn_3"
        app:layout_constraintStart_toEndOf="@+id/scientific_btn_5" />

    <Button
        android:id="@+id/scientific_btn_3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:background="#202124"
        android:fontFamily="@font/rubik_light"
        android:text="3"
        android:textColor="#F8FAFD"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/scientific_btn_equal"
        app:layout_constraintStart_toEndOf="@+id/scientific_btn_2" />

    <Button
        android:id="@+id/scientific_btn_4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:background="#202124"
        android:fontFamily="@font/rubik_light"
        android:text="4"
        android:textColor="#F8FAFD"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/scientific_btn_1"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/scientific_btn_5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:background="#202124"
        android:fontFamily="@font/rubik_light"
        android:text="5"
        android:textColor="#F8FAFD"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/scientific_btn_2"
        app:layout_constraintStart_toEndOf="@+id/scientific_btn_4" />

    <Button
        android:id="@+id/scientific_btn_2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:background="#202124"
        android:fontFamily="@font/rubik_light"
        android:text="2"
        android:textColor="#F8FAFD"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/scientific_btn_0"
        app:layout_constraintStart_toEndOf="@+id/scientific_btn_1" />

    <Button
        android:id="@+id/scientific_btn_1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:background="#202124"
        android:fontFamily="@font/rubik_light"
        android:text="1"
        android:textColor="#F8FAFD"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/scientific_btn_decimal"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/scientific_btn_div"
        android:layout_width="90dp"
        android:layout_height="72dp"
        android:layout_weight="1"
        android:background="#202124"
        android:fontFamily="@font/rubik_light"
        android:text="÷"
        android:textColor="#F8FAFD"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/scientific_btn_mul"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/scientific_btn_9" />

    <Button
        android:id="@+id/scientific_btn_sub"
        android:layout_width="90dp"
        android:layout_height="72dp"
        android:layout_weight="1"
        android:background="#202124"
        android:fontFamily="@font/rubik_light"
        android:text="-"
        android:textColor="#F8FAFD"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/scientific_btn_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/scientific_btn_3" />

    <Button
        android:id="@+id/scientific_btn_add"
        android:layout_width="90dp"
        android:layout_height="72dp"
        android:layout_weight="1"
        android:background="#202124"
        android:fontFamily="@font/rubik_light"
        android:text="+"
        android:textColor="#F8FAFD"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/scientific_btn_equal" />

    <Button
        android:id="@+id/scientific_btn_mul"
        android:layout_width="90dp"
        android:layout_height="72dp"
        android:layout_weight="1"
        android:background="#202124"
        android:fontFamily="@font/rubik_light"
        android:text="×"
        android:textAllCaps="false"
        android:textColor="#F8FAFD"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/scientific_btn_sub"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/scientific_btn_6" />

    <Button
        android:id="@+id/scientific_btn_equal"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:background="#202124"
        android:fontFamily="@font/rubik_light"
        android:text="="
        android:textColor="#F8FAFD"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/scientific_btn_0" />

    <Button
        android:id="@+id/scientific_btn_decimal"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:background="#202124"
        android:fontFamily="@font/rubik_light"
        android:text="."
        android:textColor="#F8FAFD"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/scientific_btn_0"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:background="#202124"
        android:fontFamily="@font/rubik_light"
        android:text="0"
        android:textColor="#F8FAFD"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/scientific_btn_decimal" />
</androidx.constraintlayout.widget.ConstraintLayout>